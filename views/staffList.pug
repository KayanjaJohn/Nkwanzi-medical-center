extends dashlayout
block content
    style.
        .list{
        text-align:center;
        }
        .card-title{
        background: linear-gradient(to bottom,rgb(93, 88, 15),rgba(207, 232, 41, 0.58),rgb(74, 77, 26));
        color:black;
        border:24px solid rgb(0,0,0,0.67);
        padding:8px;
        font-weight:bolder;
        font-size:28px;
        border-radius:15px 30px 15px 30px;
        }
        nav{
        font-weight:bolder;
        text-align:center;
        }
        .nav-link{
        color: black;
        }
        .nev{
        background: linear-gradient(to bottom,rgb(15, 93, 93),rgb(41, 232, 232),rgb(26, 77, 77));
        border-radius:15px 30px 15px 30px;
        width:20%;
        padding:2px;
        border:teal;
        font-weight:700;
        margin:auto;
        }
        .table{
            text-align:center;
        width:85%; 
        margin:auto;
        border:2px ridge grey; 
        padding:8px;
        }
        thead{
        font-weight:700;
        font-size:18px; 
        }
        tbody{
            text-align:center;
            font-weight:500;
            font-size:15px;
        }
        .form-group{
            transform:translateY(55px);
            margin-left:12px;
            padding:25px;
            position:absolute;
            left:0;

        }
        .btnz{
            background: linear-gradient(to bottom,rgb(61, 15, 155,0.87),rgb(177, 165, 245),rgb(69, 26, 152,0.86));
            border-radius:25px;
            padding:16px;
            font-size:25px;
            font-weight:900;
            color: rgb(11, 11, 11,0.87);
        }
        .delete{
            background: linear-gradient(to bottom,rgb(150, 21, 21),rgb(240, 84, 90),rgb(77, 26, 26));
            font-size:18px;
            font-weight:700;
            color: rgb(11, 11, 11,0.87);
        }
        .approve{
            background:linear-gradient(rgb(66, 65, 65),rgb(224, 216, 216),rgb(62, 61, 61));
            font-size:18px;
            font-weight:700;
            color: rgb(11, 11, 11,0.87);
        }
        .update{
            background: linear-gradient(to bottom,rgb(21, 150, 64),rgb(180, 240, 84),rgb(26, 77, 29));	
            color:rgb(25, 90, 90);
            font-size:18px;
            font-weight:700;
        }
    header.card-header.list
        h4.card-title List of the medical team.
        br
    br
    table.table.table-bordered 
        thead
            tr
                th Image 
                th Name
                th Registration date
                th NIN
                th Nationality
                th  Role
                th Contact
                th Gender
                th Status
                th Update
                th Delete
        tbody
            if teamMembers.length
                each teamMember in teamMembers
                    if teamMember.status == 'Registered' && teamMember.role
                        tr
                            td 
                                img(src="/"+teamMember.image, alt="Image" width='150px' height="150px")
                            td #{teamMember.fName+' '+teamMember.lName}
                            td #{teamMember.regDate}
                            td #{teamMember.nin}
                            td #{teamMember.nationality}
                            td #{teamMember.role}
                            td #{teamMember.contact}
                            td #{teamMember.sex}
                            td #{teamMember.status}
                            td
                                    a.btn.btn-primary.btn-block.update(href='/produce/update/'+teamMember._id) Update
                            td
                                form(method="post" action='/produce/delete')
                                    input(type="hidden" placeholder="" name="id", value=teamMember._id)
                                    button.btn.btn-danger.btn-block.delete(type="submit") Delete
    div.form-row
        div.col.form-group
            a.btn.btnz(class='button' href='/fodashboard') << Back

